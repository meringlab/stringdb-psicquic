<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:jaxws="http://cxf.apache.org/jaxws"
       xmlns:jaxrs="http://cxf.apache.org/jaxrs"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.5.xsd



        http://cxf.apache.org/jaxws http://cxf.apache.org/schemas/jaxws.xsd
        http://cxf.apache.org/jaxrs http://cxf.apache.org/schemas/jaxrs.xsd"
       default-autowire="byName">

    <!-- Load CXF modules from cxf.jar -->
    <import resource="classpath:META-INF/cxf/cxf.xml"/>
    <import resource="classpath:META-INF/cxf/cxf-extension-soap.xml"/>
    <import resource="classpath:META-INF/cxf/cxf-extension-jaxws.xml"/>
    <import resource="classpath:META-INF/cxf/cxf-servlet.xml"/>
    <import resource="classpath:META-INF/cxf/cxf-extension-jaxrs-binding.xml"/>

    <!-- Enable message logging using the CXF logging feature -->
    <!--<cxf:bus>-->
    <!--<cxf:features>-->
    <!--<cxf:logging />-->
    <!--</cxf:features>-->
    <!--</cxf:bus>-->

    <bean name="restService11" class="org.string_db.psicquic.StringdbPsicquicRestService"/>

    <!-- Service endpoint -->
    <!-- See http://incubator.apache.org/cxf/faq.html regarding CXF + Spring AOP -->
    <jaxws:endpoint xmlns:s="http://psi.hupo.org/mi/psicquic"
                    id="psicquicService" serviceName="s:PsicquicService"
                    implementorClass="org.string_db.psicquic.StringdbPsicquicService"
                    implementor="#stringdbPsicquicService" address="/psicquic">
    </jaxws:endpoint>
    <jaxrs:server id="psicquicRestService11" address="/v1.1">
        <jaxrs:serviceBeans>
            <ref bean="restService11"/>
        </jaxrs:serviceBeans>
    </jaxrs:server>

    <jaxrs:server id="psicquicRestServiceCurrent" address="/current">
        <jaxrs:serviceBeans>
            <ref bean="restService11"/>
        </jaxrs:serviceBeans>
    </jaxrs:server>

</beans>